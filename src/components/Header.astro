---
import Link from '../components/Link.astro'
import Button from '../components/Button.astro'
---
<div x-data="{ showmenu: false }" class="p-4 fixed lg:static w-full bg-green-950" >
<div id="navbar" class="flex flex-row justify-between">
<div id="logo" class="animate-pulse flex items-center gap-2">
    <a href="/">
  <img src="/logo.svg" alt="Ryd op Logo" class="h-20 w-full">
  </a>
</div>
<nav id="desktopmenu" class="hidden lg:block font-digibats text-xl text-green-400 no-underline">
<ul class="flex flex-row gap-4 p-4">
<li class=""><Link href="/registrer-dit-bidrag" >REGISTRER DIT BIDRAG</Link></li><!-- alternativt: lav et <a href="">Link</a>, hvis du ikke vil bruge Link.astro komponenten -->
<li class=""><Link href="/ressourcer" >RESSOURCER</Link></li>
<li class=""><Link href="/how-to" >HOW TO</Link></li>
<li class=""><Button>DEL RESULTAT</Button></li>
</ul>
</nav>
<button id="burgermenu" class="lg:hidden" x-on:click="showmenu = ! showmenu">Menu</button>
</div>
<nav id="mobilmenu" class="flex flex-col content-center pt-4 text-green-400" 
x-show="showmenu" x-transition x-on:click="showmenu = false" x-on:click.outside="showmenu = false">
<ul >
<li class="text-center py-2 border-y-2"><Link href="/registrer-dit-bidrag" >REGISTRER DIT BIDRAG</Link></li>
<li class="text-center py-2 border-b-2"><Link href="/ressourcer" >RESSOURCER</Link></li>
<li class="text-center py-2 border-b-2"><Link href="/how-to" >HOW TO</Link></li>
<li class="text-center py-2 border-b-2"><Button href="/del-resultat" >DEL RESULTAT</Button></li>
</ul>
</nav>
</div>